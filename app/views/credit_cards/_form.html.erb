<%= simple_form_for @credit_card do |l| %>

  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-4 col-lg-4">
      <%= l.input :issuer, label:'Emisor' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-4 col-lg-4">
      <%= l.input :kind, label:'Tipo', collection: @kind_options %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-4 col-lg-4">
      <%= l.input :expiration, label:'Vencimiento', as: :date, start_year: Date.today.year - 5, discard_day: false,
                                  order: [:month, :year] %>
    </div>
  </div>


  <%= l.button :submit, 'Guardar', class: "btn btn-success" %>
  <%= link_to icon('fas',"back","Cancelar"), credit_cards_path, class: "btn btn-warning" %>
<% end %>
