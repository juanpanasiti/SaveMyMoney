<h1> <%= @tax.name %> </h1>
<%= simple_form_for(@payment, as: :payment, method: :post, url: create_payment_tax_path) do |l| %>

  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-4 col-lg-4">
      <%= l.input :amount, label:'Monto' %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-7 col-md-4 col-lg-4">
      <%= l.input :expiration, label:'Vencimiento', as: :date, start_year: (Date.today.year - 1),
                              end_year: (Date.today.year + 1), order: [:day, :month, :year] %>
    </div>
  </div>

  <%= l.button :submit, 'Guardar', class: "btn btn-success" %>
  <%= link_to icon('fas',"back","Cancelar"), taxes_path, class: "btn btn-warning" %>
<% end %>
