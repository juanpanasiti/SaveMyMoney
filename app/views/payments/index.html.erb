<h1>Mes Actual</h1>
<table class="table table-bordered table-stripped table-dark">
  <thead>
    <th>Detalle</th>
    <th>M. de Pago</th>
    <th>Cuota</th>
    <th>Vencimiento</th>
    <th>Monto</th>
    <th>Estado</th>
    <th>Opciones</th>
  </thead>
  <tbody>
    <% @cantItems = 0 %>
    <% @totalTarjetas = 0 %>
    <% @totalEfectivo = 0 %>
    <% @current_payments.each do |payment| %>
    <%= render "table_content", payment: payment %>
    <% end %>
    <tr>
      <td>Cant. Items: <%= @cantItems %></td>
      <td colspan="2">Tarjetas: <%= number_to_currency @totalTarjetas %></td>
      <td colspan="2">Efectivo: <%= number_to_currency @totalEfectivo %></td>
      <td colspan="2">Totales: <%= number_to_currency (@totalEfectivo + @totalTarjetas) %></td>
    </tr>
  </tbody>
</table>
